<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Color_A"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/barnner_height"
        android:background="@drawable/libary" >

        <ImageView
            android:id="@id/banner_pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdgeLength="0.0dip"
            android:keepScreenOn="true"
            android:soundEffectsEnabled="false" />

        <LinearLayout
            android:id="@id/bottom_nav_point"
            android:layout_width="wrap_content"
            android:layout_height="20.0dip"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/PaddingDistance_A" >

            <LinearLayout
                android:id="@id/focus_indicator_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffe0e0e0"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@id/home_column_one"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="1.0dip"
                android:layout_marginTop="1.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@id/send_express_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/main_btn_bg"
                    android:padding="@dimen/PaddingDistance_C" >

                    <TextView
                        android:id="@id/send_express_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/PaddingDistance_A"
                        android:drawableTop="@drawable/send_express1"
                        android:gravity="center_horizontal"
                        android:text="快递签收"
                        android:textColor="@color/Color_D"
                        android:textSize="16.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/notice_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="1.0dip"
                    android:layout_weight="1.0"
                     android:background="@drawable/main_btn_bg"
                    android:padding="@dimen/PaddingDistance_C" >

                    <TextView
                        android:id="@id/notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/PaddingDistance_A"
                        android:drawableTop="@drawable/coming_express"
                        android:gravity="center_horizontal"
                        android:text="公告"
                        android:textColor="@color/Color_D"
                        android:textSize="16.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/service_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="1.0dip"
                    android:layout_weight="1.0"
                     android:background="@drawable/main_btn_bg"
                    android:padding="@dimen/PaddingDistance_C" >

                    <TextView
                        android:id="@id/home_service_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/PaddingDistance_A"
                        android:drawableTop="@drawable/service"
                        android:gravity="center_horizontal"
                        android:text="服务"
                        android:textColor="@color/Color_D"
                        android:textSize="16.0sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@id/home_column_two"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="1.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@id/message_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                     android:background="@drawable/main_btn_bg"
                    android:padding="@dimen/PaddingDistance_C" >

                    <TextView
                        android:id="@id/search_express_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/PaddingDistance_A"
                        android:drawableTop="@drawable/search_express"
                        android:gravity="center_horizontal"
                        android:text="消息"
                        android:textColor="@color/Color_D"
                        android:textSize="16.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/admin_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="1.0dip"
                    android:layout_weight="1.0"
                     android:background="@drawable/main_btn_bg"
                    android:padding="@dimen/PaddingDistance_C" >

                    <TextView
                        android:id="@id/out_express_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/PaddingDistance_A"
                        android:drawableTop="@drawable/out_express"
                        android:gravity="center_horizontal"
                        android:text="项目审核"
                        android:textColor="@color/Color_D"
                        android:textSize="16.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/common_tools_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="1.0dip"
                    android:layout_weight="1.0"
                     android:background="@drawable/main_btn_bg"
                    android:padding="@dimen/PaddingDistance_C" >

                    <TextView
                        android:id="@id/common_tools_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/PaddingDistance_A"
                        android:drawableTop="@drawable/common_tools"
                        android:gravity="center_horizontal"
                        android:text="设置"
                        android:textColor="@color/Color_D"
                        android:textSize="16.0sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>