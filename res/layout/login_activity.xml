<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/login_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:paddingLeft="27.0dip"
    android:paddingRight="27.0dip" >

    <ImageView
        android:id="@id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30.0dip"
        android:layout_marginTop="30.0dip"
        android:src="@drawable/la_logo" />

    <LinearLayout
        android:id="@id/login_email_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:background="@drawable/login_input"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13.0dip"
            android:text="帐号"
            android:textColor="@color/white"
            android:textSize="14.0sp" />

        <EditText
            android:id="@id/login_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:hint="帐号"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/login_pwd_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_email_ll"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/login_input"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13.0dip"
            android:text="密码"
            android:textColor="@color/white"
            android:textSize="14.0sp" />

        <EditText
            android:id="@id/login_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:hint="密码"
            android:inputType="textPassword"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14.0sp" />
    </LinearLayout>

    <Button
        android:id="@id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_below="@id/login_pwd_ll"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/mymeile_play_random_bg"
        android:gravity="center"
        android:onClick="login"
        android:text="登 录"
        android:textSize="14.0sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@id/login_activity_social_login_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="34.0dip"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>